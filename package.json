{
  "name": "book-publishing-api",
  "version": "1.0.0",
  "description": "A minimal Book Publishing API with config-driven audit trail",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/app.js",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "postinstall": "prisma generate"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": ["book", "publishing", "api", "audit-trail", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^6.9.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.3",
    "express": "^5.2.1",
    "jsonwebtoken": "^9.0.3",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "typescript": "^5.9.3",
    "uuid": "^13.0.0",
    "zod": "^4.3.2"
  },
  "devDependencies": {
    "prisma": "^6.9.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0"
  }
}
